# python
alias pm='python manage.py'
alias pyserver='python manage.py runserver'

# elixir and phoenix
alias xoxo='mix ecto.{drop,create,migrate}'
alias perver='mix phoenix.server'
alias console='iex -S mix phoenix.server'

# github issues gem
alias mile='ghi milestone'
alias label='ghi list --label'
