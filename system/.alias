alias dcm='bundle exec rake db:{drop,create,migrate}'
alias prepare='rake db:test:prepare'
alias popo='rubocop'
alias cop='rubocop'
alias rop='rspec && rubocop'
alias rubospec='rspec && rubocop'
alias rspec-all='rspec --no-fail-fast'
alias rvmgs='rvm gemset use'

# servers etc
alias log='tail -f log/development.log'
alias serve='python -m SimpleHTTPServer 8000'

# elixir and phoenix
alias xoxo='mix ecto.{drop,create,migrate}'
alias xs='mix phx.server'
