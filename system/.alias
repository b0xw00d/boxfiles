alias ls1='ls -1G'
alias cl='clear'
alias e='subl'
alias vim='mvim'
alias vi='mvim'
alias mm='mvim'
alias m='mvim'

# file navigation
alias ..='cd ..'
alias prev='cd -'
alias back='cd -'
alias d='cd ~/Desktop'
alias w='cd ~/work'
alias work='cd ~/work'
alias p='cd ~/projects'
alias projects='cd ~/projects'
alias old='cd ~/code/old'
